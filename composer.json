{
    "name": "atelierspierrot/event-manager",
    "type": "library",
    "description": "The events manager package of Les Ateliers Pierrot.",
    "keywords": [ "library", "event-manager" ],
    "homepage": "http://github.com/atelierspierrot/event-manager",
    "license": "Apache-2.0",
    "authors": [{
        "name": "Les Ateliers Pierrot & contributors",
        "email": "contact@ateliers-pierrot.fr",
        "homepage": "http://www.ateliers-pierrot.fr/"
    },{
        "name": "Pierre Cassat",
        "homepage": "http://e-piwi.fr/"
    }],
    "require": {
        "php": ">=5.4.0",
        "atelierspierrot/patterns": "~1.0.9",
        "atelierspierrot/library": "2.0.0-BETA"
    },
    "require-dev": {
        "sami/sami": "@stable",
        "phpunit/phpunit": "@stable",
        "fabpot/php-cs-fixer": "@stable",
        "phpmd/phpmd" : "@stable"
    },
    "autoload": { "psr-4": {  "EventManager\\": "src/EventManager/" } },
    "scripts": {
        "build-doc": "php vendor/bin/sami.php update .sami.php",
        "update-doc": "php vendor/bin/sami.php update .sami.php",
        "cs-fixer": "php vendor/bin/php-cs-fixer fix -v"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    }
}
